{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment & Module Resolution
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],
    "esModuleInterop": true, //allows TypeScript to correctly import CommonJS modules (like dotenv) using modern ES syntax


    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness & Safety
    "strict": true,
    
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Optional clean-code flags
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
